    <bean id="announcer"
          class="learn.battle.announcers.ProperAnnouncer"/>


    <bean id="location" class="learn.battle.environment.Location">
        <constructor-arg value="Kahn's Arena"/>
    </bean>


    <bean id="liu" class="learn.battle.fighters.Fighter" scope="prototype">
        <constructor-arg value="Liu Kang"/>
    </bean>

    <bean id="johnny" class="learn.battle.fighters.Fighter">
        <constructor-arg value="Johnny Cage"/>
    </bean>

    <bean id="kano" class="learn.battle.fighters.Fighter">
        <constructor-arg value="Kano"/>
    </bean>

    <bean id="raiden" class="learn.battle.fighters.Fighter">
        <constructor-arg value="Raiden"/>
    </bean>

    <bean id="scorpion" class="learn.battle.fighters.Fighter">
        <constructor-arg value="Scorpion"/>
    </bean>

    <bean id="subzero" class="learn.battle.fighters.Fighter">
        <constructor-arg value="Sub-Zero"/>
    </bean>

    <bean id="sonya" class="learn.battle.fighters.Fighter">
        <constructor-arg value="Sonya Blade"/>
    </bean>


    <bean id="mortalKombat" class="learn.battle.environment.Battle">
        <constructor-arg ref="location"/>
        <constructor-arg>
            <list>
                <ref bean="liu" />
                <ref bean="johnny" />
                <ref bean="kano" />
                <ref bean="raiden" />
                <ref bean="scorpion" />
                <ref bean="subzero" />
                <ref bean="sonya" />
            </list>
        </constructor-arg>
        <property name="announcer" ref="announcer"/>
    </bean>


</beans>